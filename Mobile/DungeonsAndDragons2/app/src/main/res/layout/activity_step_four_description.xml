<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cc03532.dungeonsanddragons.StepFourDescription">

    <TextView
        android:id="@+id/race_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/subrace_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/race_value"/>

    <TextView
        android:id="@+id/strength_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subrace_value"/>
    <TextView
        android:id="@+id/strength_modifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subrace_value"
        android:layout_toEndOf="@+id/strength_total"
        android:layout_toRightOf="@id/strength_total"/>

    <TextView
        android:id="@+id/dexterity_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/strength_total"/>
    <TextView
        android:id="@+id/dexterity_modifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/strength_modifier"
        android:layout_toRightOf="@id/dexterity_total"
        android:layout_toEndOf="@id/dexterity_total"
        android:text="safdgafgasdfgasdfg"/>

    <TextView
        android:id="@+id/constitution_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dexterity_total"/>
    <TextView
        android:id="@+id/constitution_modifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dexterity_modifier"
        android:layout_toRightOf="@+id/constitution_total"
        android:layout_toEndOf="@id/constitution_total"
        android:text="safdgafgasdfgasdfg"/>

    <TextView
        android:id="@+id/intelligence_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/constitution_total" />
    <TextView
        android:id="@+id/intelligence_modifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/constitution_modifier"
        android:layout_toRightOf="@+id/intelligence_total"
        android:layout_toEndOf="@id/intelligence_total"/>

    <TextView
        android:id="@+id/wisdom_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intelligence_total"/>
    <TextView
        android:id="@+id/wisdom_modifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intelligence_modifier"
        android:layout_toRightOf="@+id/wisdom_total"
        android:layout_toEndOf="@+id/wisdom_total"/>


    <TextView
        android:id="@+id/charisma_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wisdom_total"/>
    <TextView
        android:id="@+id/charisma_modifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wisdom_modifier"
        android:layout_toRightOf="@+id/charisma_total"
        android:layout_toEndOf="@+id/charisma_total"/>

    <TextView
        android:id="@+id/hitdie_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/charisma_total"/>

    <EditText
        android:id="@+id/etCharacterName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hitdie_total"
        android:hint="@string/characterName"/>

    <Button
        android:id="@+id/step_four_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etCharacterName"
        android:onClick="stepFourSubmit"/>

</RelativeLayout>
