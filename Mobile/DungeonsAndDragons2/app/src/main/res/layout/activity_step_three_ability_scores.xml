<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:stackFromBottom="true"
    android:transcriptMode="alwaysScroll" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cc03532.dungeonsanddragons.StepThreeAbilityScores">
    <TextView
        android:id="@+id/step_three_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/step_three_text"/>

    <LinearLayout
        android:id="@+id/strength_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/step_three_header"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/strength_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/strength_text"/>

        <NumberPicker
            android:id="@+id/strength_picker"
            android:theme="@android:style/Theme.Dialog"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:scaleX="0.75"
            android:scaleY="0.75"
            android:layout_gravity="center">
        </NumberPicker>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dexterity_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/strength_group"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dexterity_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/dexterity_text"/>

        <NumberPicker
            android:id="@+id/dexterity_picker"
            android:theme="@android:style/Theme.Dialog"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:scaleX="0.75"
            android:scaleY="0.75">
        </NumberPicker>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/constitution_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dexterity_group"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/constitution_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/constitution_text"/>

        <NumberPicker
            android:id="@+id/constitution_picker"
            android:theme="@android:style/Theme.Dialog"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:scaleX="0.75"
            android:scaleY="0.75">
        </NumberPicker>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/intelligence_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/constitution_group"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/intelligence_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/intelligence_text"/>

        <NumberPicker
            android:id="@+id/intelligence_picker"
            android:theme="@android:style/Theme.Dialog"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:scaleX="0.75"
            android:scaleY="0.75">
        </NumberPicker>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/wisdom_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intelligence_group"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wisdom_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/wisdom_text"/>

        <NumberPicker
            android:id="@+id/wisdom_picker"
            android:theme="@android:style/Theme.Dialog"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:scaleX="0.75"
            android:scaleY="0.75">
        </NumberPicker>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/charisma_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wisdom_group"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/charisma_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/charisma_text"/>

        <NumberPicker
            android:id="@+id/charisma_picker"
            android:theme="@android:style/Theme.Dialog"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:scaleX="0.75"
            android:scaleY="0.75">
        </NumberPicker>

    </LinearLayout>

    <Button
        android:id="@+id/step_three_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/charisma_group"
        android:onClick="stepThreeSubmit"/>

</RelativeLayout>
    </ScrollView>